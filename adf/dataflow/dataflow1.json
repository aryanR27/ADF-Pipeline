{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DataFlow_Source_DT",
						"type": "DatasetReference"
					},
					"name": "DataflowSource"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "TransformationSink",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "select1"
				},
				{
					"name": "filter1"
				},
				{
					"name": "VisaSplit"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "aggregate"
				},
				{
					"name": "alterRow1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          transaction_id as short,",
				"          transactional_date as timestamp,",
				"          product_id as string,",
				"          customer_id as short,",
				"          payment as string,",
				"          credit_card as long,",
				"          loyalty_card as boolean,",
				"          cost as double,",
				"          quantity as short,",
				"          price as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> DataflowSource",
				"DataflowSource select(mapColumn(",
				"          transaction_id,",
				"          transactional_date,",
				"          product_id,",
				"          customer_id,",
				"          payment,",
				"          price",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 filter(customer_id <= 10) ~> filter1",
				"filter1 split(payment == 'visa',",
				"     payment == 'mastercard',",
				"     disjoint: false) ~> VisaSplit@(Visa, MasterCard, default)",
				"VisaSplit@default derive(payment = coalesce(payment,'Not Available')) ~> derivedColumn1",
				"VisaSplit@Visa aggregate(groupBy(customer_id),",
				"     price = sum(price)) ~> aggregate",
				"aggregate alterRow(insertIf(1==1)) ~> alterRow1",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink"
			]
		}
	}
}